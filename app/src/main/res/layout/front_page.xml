<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backronald">

    <LinearLayout
        android:id="@+id/LLID"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="88dp"
        android:background="@color/colorGold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent ">

        <Button
            android:id="@+id/locButton"

            android:layout_width="10dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@drawable/custombutton"
            android:drawableLeft="@drawable/placeholder"
            android:gravity="center"
            android:paddingLeft="22dp"
            android:scaleType="fitCenter"
            android:shadowColor="#A8A8A8"

            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/phoneButton"
            android:layout_width="10dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@drawable/custombutton"
            android:drawableLeft="@drawable/telephone"
            android:gravity="center"
            android:paddingLeft="22dp"

            android:scaleType="fitCenter"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="0"
            android:textColor="#FFFFFF"

            android:textSize="30sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/locButton" />

        <Button
            android:id="@+id/webButton"
            android:layout_width="10dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@drawable/custombutton"
            android:drawableLeft="@drawable/internet"
            android:gravity="center"
            android:paddingLeft="22dip"

            android:scaleType="fitCenter"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="0"
            android:textColor="#FFFFFF"

            android:textSize="30sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/phoneButton" />



    </LinearLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="369dp"
        android:layout_height="280dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="@id/LLID"
        app:layout_constraintHorizontal_bias="0.38"

        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/ronaldlogo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="381dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toBottomOf="@id/LLID"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp"
        android:background="@color/colorWhite"
        tools:layout_editor_absoluteY="350dp">

        <TextView
            android:id="@+id/AddressTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="50dp"
            android:text="Address: "
            android:textColor="@color/ic_launcher_background"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
 />

        <TextView
            android:id="@+id/LocationTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="745 W Governor Rd, Hershey, PA 17033"
            android:textColor="@color/ic_launcher_background"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/AddressTV"

            />

        <TextView
            android:id="@+id/PhoneTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:text="Phone Number: "
            android:textColor="@color/ic_launcher_background"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            app:layout_constraintTop_toBottomOf="@id/LocationTV" />

        <TextView
            android:id="@+id/NumberTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(717) 533-4001"
            android:textColor="@color/ic_launcher_background"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/PhoneTV"

            />

        <TextView
            android:id="@+id/WebTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:text="Website: "
            android:textColor="@color/ic_launcher_background"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            app:layout_constraintTop_toBottomOf="@id/NumberTV" />

        <TextView
            android:id="@+id/UrlTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="https://www.rmhc-centralpa.org/"
            android:textColor="@color/ic_launcher_background"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/WebTV"

            />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>